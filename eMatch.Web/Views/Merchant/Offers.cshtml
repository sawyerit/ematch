<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Create an offer</h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="category" class="col-sm-2 control-label">Category</label>
                        <div class="col-sm-10">
                            <select class="form-control">
                                <option>--Select a Category--</option>
                                <option value="discount">Discounts</option>
                                <option value="hotels">Hotels</option>
                                <option value="books">Books</option>
                                <option value="food">Food</option>   
                                <option value="drinks">Drinks</option>   
                                <option value="rentals">Rentals</option>                                
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="offerName" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="offerName" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="offerDescription" class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="offerDescription" placeholder="Description">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="offerDescription" class="col-sm-2 control-label">Expires</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="offerDescription" value="@DateTime.Now.AddDays(10)">
                        </div>
                    </div> 
                    <div class="form-group">
                        <label for="offerDescription" class="col-sm-2 control-label">Keywords (comma delimited)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="offerDescription">
                        </div>
                    </div>                 
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success pull-right">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
